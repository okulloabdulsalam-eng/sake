rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function: Check if request is from Cloud Functions
    function isFromCloudFunction() {
      // Cloud Functions use admin SDK which bypasses rules
      // But we can check for specific metadata
      return request.auth.token.firebase.sign_in_provider == 'custom';
    }
    
    // Payments collection - STRICT SECURITY
    // SECURITY: Payments are immutable after verification
    // Only Cloud Functions (using admin SDK) can create/update payments
    match /payments/{paymentId} {
      // Deny all public writes - only Cloud Functions can write
      allow create: if false; // Only Cloud Functions (admin SDK) can create
      allow update: if false; // Only Cloud Functions (admin SDK) can update
      allow delete: if false; // No deletes allowed - maintain audit trail
      
      // Allow read only for authenticated users who own the payment
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Note: Cloud Functions use admin SDK which bypasses these rules
      // These rules protect against client-side manipulation
      // Payments are created/updated only by backend verification
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data
      allow read: if isAuthenticated() && isOwner(userId);
      
      // Users can create/update their own document
      allow create, update: if isAuthenticated() && isOwner(userId);
      
      // No deletes
      allow delete: if false;
    }
    
    // Default: Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

